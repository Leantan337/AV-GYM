# Django settings
DJANGO_SETTINGS_MODULE=fitcore.settings_production
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_ALLOWED_HOSTS=example.com,www.example.com
ENVIRONMENT=production

# Database settings
DB_NAME=fitcore_db
DB_USER=fitcore_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis cache
REDIS_URL=redis://127.0.0.1:6379/1

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@example.com

# AWS S3 settings for media storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# Security settings
CORS_ORIGIN_WHITELIST=https://example.com,https://www.example.com

# Error tracking
SENTRY_DSN=your-sentry-dsn

# Performance monitoring
SCOUT_KEY=your-scout-key
